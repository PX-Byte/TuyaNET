<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackageId>PXByte.TuyaNet.API</PackageId>
        <Title>TuyaNet API</Title>
        <Authors>PXByte</Authors>
        <Copyright>PXByte</Copyright>
        <RepositoryUrl>https://github.com/PX-Byte/TuyaNet</RepositoryUrl>
        <RepositoryType>Package</RepositoryType>
        <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <Description>Package to comunicate with Tuya API</Description>
        <license>https://github.com/PX-Byte/TuyaNET/blob/master/LICENSE</license>
        <PackageLicenseUrl>https://github.com/PX-Byte/TuyaNET/blob/master/LICENSE</PackageLicenseUrl>
    </PropertyGroup>

    <ItemGroup>
        <None Include="../README.md" Pack="true" PackagePath="/"/>
        <PackageReference Include="NuGet.Build.Tasks.Pack" Version="6.12.1">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
    </ItemGroup>


</Project>
